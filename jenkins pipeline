
pipeline {
    agent any
    tools {
        jdk 'jdk17'
        nodejs 'node16'
    }
    environment {
        SCANNER_HOME = tool 'Sonar-scanner'
    }
    stages {
        stage('clean workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/Jitendranathkaruturi/Myflix.git'
            }
        }
        stage("Sonarqube Analysis "){
            steps{
                withSonarQubeEnv('Sonar-server') {
                    sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=Netflix \
                    -Dsonar.projectKey=Netflix '''
                }
            }
        }
        stage('OWASP FS SCAN') {
            steps {
                dependencyCheck additionalArguments: '--scan ./ --disableYarnAudit --disableNodeAudit', odcInstallation: 'DP-Check'
                dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
            }
        }
        stage('TRIVY FS SCAN') {
            steps {
                sh "trivy fs . > trivyfs.txt"
            }
        }
        stage('Docker Compose') {
            steps {
                script {
                    // Assuming you have a docker-compose.yml file in your project
                    sh 'docker-compose build'
                    //sh 'docker-compose run'
                }
            }
        }
        stage('Docker tag and push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker', toolName: 'docker'){   
                     //  sh "docker tag myflix-ui jitendra4545/myflix-ui:latest "
                       //sh "docker push jitendra4545/myflix-ui:latest "
                       //sh "docker tag myflix-api jitendra4545/myflix-api:latest "
                       //sh "docker push jitendra4545/myflix-api:latest "
                        sh "docker-compose push"
                    }
                }
            }
        }
        stage("TRIVY"){
            steps{
                sh "trivy image jitendra4545/myflix-api:latest > trivyimageapi.txt" 
                sh "trivy image jitendra4545/myflix-ui:latest > trivyimageui.txt" 
            }
        }
        stage('Deploy to Container') {
            steps {
                script {
                    sh 'docker run -d --name ui -p 3000:3000 jitendra4545/myflix-ui:latest'
                    sh 'docker run -d --name api -p 4000:4000 jitendra4545/myflix-api:latest'
                }
            }
        }
        
    }
     post {
        always {
            // This post section will run after all stages, regardless of success or failure

                emailext attachLog: true,
 		      subject: "Your Build ${currentBuild.result}",
                      body: "Check the build console output at ${BUILD_URL} to view the results.",
                      to: 'jitendranathkaruturi@gmail.com',
                      replyTo: 'jitendranathkaruturi@gmail.com',
                      mimeType: 'text/html'
        }
    }
}